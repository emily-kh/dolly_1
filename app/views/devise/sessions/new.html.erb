<%= render "shared/header"%>

<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
  <div class='form-wrap'>
    <div class="box-account">
      <div class='form-header'>
        <h2 class='form-header-text'>
          会員登録をされている方
        </h2>
      </div>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
      </div>
      <div class='login-btn'>
        <%= f.submit "ログイン" ,class:"login-red-btn" %>
      </div>
    </div>  
    <div class="box-account-new">
      <div class="box-account-ttl">
        <h2 class="ttl-cmn-03">会員登録をされていない方</h2>
      </div>
      <div class="box-account-link-weap">
        <a><%= link_to '新規会員登録', new_user_registration_path, class: "btn-cmn-02" %></a>
      </div>
    </div>
  </div>
<% end %>

  





